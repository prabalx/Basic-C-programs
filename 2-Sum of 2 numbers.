#include<stdio.h>
int main()
{
    int a, b, sum;          /*Declaring the variables a and b as integers and sum as well which will be used later on*/
    printf("Enter any number = ");
    scanf("%d",&a);        /*After the user is asked for the first number it is saved in variable "a"*/
    printf("\nEnter any number = ");
    scanf("%d",&b);        /*Same is done for the second number, it is stored in variable "b"*/
    sum = a + b;           /*Using the addition operator user input numbers, stored in a & b, are operated*/
    printf("\nThe sum of %d and %d is %d",a,b,sum);   /*The result is displayed*/
    return 0;              /*The command \n is used to display the text in a new line*/
}
